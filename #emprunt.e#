class EMPRUNT

creation {ANY}
    make

feature {ANY}
	media: MEDIA
	user : UTILISATEUR
   date_emprunt: TIME
	date_retour: TIME

feature {ANY}
    make_emprunt (media: MEDIA; user : UTILISATEUR; date_emprunt : TIME; date_retour : TIME) is
    do
		media := media
		user := user
		date_emprunt := date_emprunt
		date_retour := date_retour
    end
	
	   ---------------------------------
       ------- AFFICHER EMPRUNT
       -- On retourne une cdc qui contient le titre de l'objet emprunté et l'identifiant de l'emprunteur
       ---------------------------------
	afficher : STRING is
	do
		Result := media.get_titre + " emprunté par " + user.get_identifiant
	end
    ---------------------
    ----- SETTERS -------
    ---------------------
	set_date_retour is
	do
		date_retour.update
	end
	
    ---------------------
    ----- GETTERS -------
    ---------------------
	get_date_retour : TIME is
	do
		Result := date_retour
	end

end -- classe REMPRUNT

